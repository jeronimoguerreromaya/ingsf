<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ingsf.VerCursosController" spacing="10" style="-fx-padding: 10;">
    <Label text="Lista de Cursos" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <TableView fx:id="tablaCursos" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
            <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="250"/>
            <TableColumn fx:id="colDuracion" text="Duración (hrs)" prefWidth="100"/>
            <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>

